# Top-most EditorConfig file
root = true

# ASP.NET folder and subdirectories
[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# React folder and subdirectories
[client/**]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
